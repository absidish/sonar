{
  "name": "${environmentName}",
  "description": "SonarQubeÂ® is an automatic code review tool to detect bugs, vulnerabilities and code smells in your code. It can integrate with your existing workflow to enable continuous code inspection across your project branches and pull requests.",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "sonar",
      "template": "debian-stretch",
      "peer-criteria": "atlassian",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "https",
          "domain": "${domainName}",
          "internal-port": "9000",
          "external-port": "443"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "atlassian"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/sonar/archive/master.zip",
    "ansible-playbook": "main.yml",
    "groups": [
      {
        "name": "servers",
        "hostnames": [
          "sonar"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "wp",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "MEDIUM",
      "validation": "MEDIUM,LARGE,HUGE"
    },
    "domainName": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
